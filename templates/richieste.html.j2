{% autoescape true %}
<html>
  <head>
    <title>Nuove richieste - Condivisione</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="{{css}}">
    <link rel="shortcut icon" href="{{ url_for('static', filename='favicon.ico') }}">
  </head>
  <body>
    {% include 'nav.html.j2' %}
    <div class="container">
      <h1>
         Nuove richieste
      </h1>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Richiedente</th>
            <th>Materia</th>
            <th>Data</th>
            <th>Ora</th>
            <th>Accetta</th>
            <th>Declina</th>
          </tr>
        </thead>
        {% for impegno in impegni %}
        {% if impegno.status is equalto 0 %}
          <tr>
            <td>{{ impegno.nomeRich }}</td>
            <td>{{ impegno.materia }}</td>
            <td>{{ impegno.data }}</td>
            <td>{{ impegno.ora }}</td>
            <td><a href="/impegno_accept/{{ impegno.iid }}"><span class="glyphicon glyphicon-ok"></span></a></td>
            <td><a href="/impegno_deny/{{ impegno.iid }}"><span class="glyphicon glyphicon-remove"></span></a></td>
          </tr>
        {% endif %}
        {% endfor %}
      </table>
   </div>
  </body>
</html>
{% endautoescape %}
